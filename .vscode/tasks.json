{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "zig build",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "zig build run",
      "problemMatcher": []
    },
    {
      "label": "test",
      "type": "shell",
      "command": "zig build test",
      "problemMatcher": ["$gcc"]
    }
  ]
}